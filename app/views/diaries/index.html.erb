<ul>
  <% @diaries.each do |diary| %>
    <div class="card mb-1">
      <div class="card-header">
        <%= diary.user.updated_at %>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= diary.content %></p>
          <footer class="blockquote-footer"><%= diary.user.name %></footer>
        </blockquote>
      </div>
    </div>
  <% end %>
</ul>